@model ProyectoProgra.Entities.UsuarioEnt

@{
    ViewBag.Title = "RegistrarCuenta";
}
<link rel="stylesheet" href="~/Templates/css/StyleSheet1.css">
<link href='https://fonts.googleapis.com/css?family=Roboto:900,900italic,500,400italic,100,700italic,300,700,500italic,100italic,300italic,400' rel='stylesheet' type='text/css'>

<div id="fback">
    <div class="girisback"></div>
    <div class="kayitback"></div>
</div>

<div id="textbox">
    <div class="toplam">
        <div class="left">
            <div id="ic">
                <h2 class="text-center">Crear Cuenta</h2>
                <p>Tus datos no se comparten con nadie</p>
                @using (Html.BeginForm("RegistrarCuenta", "Login", FormMethod.Post, new { @class = "pt-3" }))
                {
                    <div class="form-group">
                        @Html.EditorFor(m => m.Nombre, new { htmlAttributes = new { @class = " form-control-lg", @placeholder = "Nombre", @type = "text" } })
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.EditorFor(m => m.Apellidos, new { htmlAttributes = new { @class = " form-control-lg", @placeholder = "Apellidos", @type = "text" } })
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.EditorFor(m => m.CorreoElectronico, new { htmlAttributes = new { @class = " form-control-lg", @placeholder = "Correo Electrónico", @type = "email" } })
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.EditorFor(m => m.Contrasenna, new { htmlAttributes = new { @class = " form-control-lg", @placeholder = "Contraseña", @type = "password" } })
                    </div>
                    <div class="mt-3">
                        <input type="submit" value="Registar" class="centrar d-flex justify-content-center fw-bold btn btn-outline-info" />

                    </div>

                }
                <div class="text-center mt-4 font-weight-light text-light">
                    ¿Ya tienes una cuenta? <a id="moveright" class="text-primary">Iniciar Sesión</a>
                </div>
            </div>
        </div>

        <div class="right">
            <div id="ic">
                <h2 class="text-center">Iniciar Sesión</h2>
                @using (Html.BeginForm("RegistrarCuenta", "Login", FormMethod.Post, new { @class = "pt-3" }))
                {
                    <div class="form-group">
                        @Html.EditorFor(m => m.CorreoElectronico, new { htmlAttributes = new { @class = " form-control-lg", @placeholder = "Correo Electrónico", @type = "email" } })
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.EditorFor(m => m.Contrasenna, new { htmlAttributes = new { @class = " form-control-lg", @placeholder = "Contraseña", @type = "password" } })
                    </div>
                    <div class="mt-3 class=" text-center"">
                        <input type="submit" value="Iniciar Sesión" class="d-flex centrar fw-bold btn btn-outline-info" />

                    </div>

                }
                    <div class="text-center mt-4 font-weight-light text-dark">
                        ¿No tienes cuenta crea una aqui? <a id="moveleft" class="text-primary">Crear Cuenta</a>
                    </div>
                </div>
        </div>
    </div>
</div>

<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<!-- Your existing JavaScript code -->
<script>
    $('.form-control').on('focus blur', function (e) {
        $(this).parents('.form-group').toggleClass('focused', (e.type === 'focus' || this.value.length > 0));
    }).trigger('blur');

    $('#moveleft').click(function () {
        $('#textbox').animate({
            'marginLeft': "0" //moves left
        });

        $('.toplam').animate({
            'marginLeft': "100%" //moves right
        });
    });

    $('#moveright').click(function () {
        $('#textbox').animate({
            'marginLeft': "50%" //moves right
        });

        $('.toplam').animate({
            'marginLeft': "0" //moves right
        });
    });
</script>
