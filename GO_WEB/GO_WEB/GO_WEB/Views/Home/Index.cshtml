@model MN_WEB.Entities.UsuarioEnt

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout - Inicio.cshtml";
}
<link rel="stylesheet" href="~/Templates/css/StyleSheet.css">
<link href='https://fonts.googleapis.com/css?family=Roboto:900,900italic,500,400italic,100,700italic,300,700,500italic,100italic,300italic,400' rel='stylesheet' type='text/css'>
<style>
    h6 {
        color: white;
        font-size: 12px;
    }

    h5 {
        color: black;
        font-size: 12px;
    }
</style>
<div id="fback">
    <div class="girisback"></div>
    <div class="kayitback"></div>
</div>

<div id="textbox">
    <div class="toplam">
        <div class="left">
            <div id="ic">
                <h2 class="text-center">Crear Cuenta</h2>
                @using (Html.BeginForm("Registrarse", "Home", FormMethod.Post, new { @class = "pt-3" }))
                {
                    <h6>Identificación</h6>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Identificacion, new { @type = "text", @class = "form-control input-lg" })
                    </div>
                    <br />
                    <h6>Nombre</h6>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Nombre, new { @type = "text", @class = "form-control input-lg" })
                    </div>
                    <br />
                    <h6>Correo Electrónico</h6>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.CorreoElectronico, new { @type = "email", @class = "form-control input-lg" })
                    </div>
                    <br />
                    <h6>Contraseña</h6>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Contrasenna, new { @type = "password", @class = "form-control input-lg" })
                    </div>
                    <br />
                    <h6>Confirmar Contraseña</h6>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.ConfirmarContrasenna, new { @type = "password", @class = "form-control input-lg", })
                    </div>

                    <div class="mt-3">
                        <input type="submit" value="Registar" class="centrar d-flex justify-content-center fw-bold btn btn-outline-success" />
                    </div>
                }
                <div class="text-center mt-4 font-weight-light text-light">
                    ¿Ya tienes una cuenta? <a id="moveright" class="text-success">Iniciar Sesión</a>
                </div>
            </div>
        </div>

        <div class="right">
            <div id="ic">

                <h2 class="text-center">Iniciar Sesión</h2>

                @using (Html.BeginForm("IniciarSesion", "Home", FormMethod.Post, new { @class = "pt-3" }))
                {
                    <h6>Correo Electrónico</h6>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.CorreoElectronico, new { @type = "email", @class = "form-control input-lg", @placeholder = "Correo Electrónico" })
                    </div>
                    <br />
                    <h6>Contraseña</h6>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Contrasenna, new { @type = "password", @class = "form-control input-lg", @placeholder = "Contraseña" })
                    </div>
                    <div class="mt-3 class=" text-center"">
                        <input type="submit" value="Iniciar Sesión" class="d-flex centrar fw-bold btn btn-outline-success" />
                    </div>
                }
                @if (!string.IsNullOrEmpty(ViewBag.MsjPantalla))
                {
                    <div id="mensajeError" class="text-danger mt-3 font-weight-light text-light p-3" style="background-color: red; font-size: 12px;">
                        @ViewBag.MsjPantalla
                    </div>
                    <script>
                        // Ocultar el mensaje de error después de 4 segundos
                        setTimeout(function () {
                            $("#mensajeError").fadeOut("slow");
                        }, 3000);
                    </script>
                }

                <div class="text-center mt-4 font-weight-light text-light">
                    ¿No tienes cuenta crea una aquí? <a id="moveleft" class="text-success">Crear Cuenta</a>
                </div>
                <div class="text-center mt-4 font-weight-light text-light">
                    ¿Olvidaste tu contraseña? <a id="moveleft" href="@Url.Action("Recuperar", "Home")" class="text-success">Recuperar Contraseña</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<!-- Your existing JavaScript code -->
<script>
    $('.form-control').on('focus blur', function (e) {
        $(this).parents('.form-group').toggleClass('focused', (e.type === 'focus' || this.value.length > 0));
    }).trigger('blur');

    $('#moveleft').click(function () {
        $('#textbox').animate({
            'marginLeft': "0" //moves left
        });

        $('.toplam').animate({
            'marginLeft': "100%" //moves right
        });
    });

    $('#moveright').click(function () {
        $('#textbox').animate({
            'marginLeft': "50%" //moves right
        });

        $('.toplam').animate({
            'marginLeft': "0" //moves right
        });
    });
</script>
